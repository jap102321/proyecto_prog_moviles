<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lateralNav"
        android:layout_width="113dp"
        android:layout_height="match_parent"
        android:background="#535F83"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/icon_home2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/icon_profile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_profile" />

            <ImageButton
                android:id="@+id/icon_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_photo" />

            <ImageButton
                android:id="@+id/icon_video2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_video" />

            <ImageButton
                android:id="@+id/icon_web2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_web" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/iot_world" />

        <LinearLayout
            android:id="@+id/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconDrawable="@drawable/email_8_svgrepo_com"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="EMAIL"
                    android:textSize="14dp"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.2"
                    android:padding="12dp"
                    android:textColor="#5A6978"
                    android:textColorHint="#5A6978" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:endIconDrawable="@drawable/lock_alt_svgrepo_com"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="PASSWORD"
                    android:textSize="14dp"
                    android:inputType="textPassword"
                    android:letterSpacing="0.2"
                    android:padding="12dp"
                    android:textColor="#5A6978"
                    android:textColorHint="#5A6978" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="20dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Remember Me"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Forgot Password?"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login"
                android:fontFamily="@font/roboto_bold"
                android:text="Login"
                android:letterSpacing="0.2"
                android:textColor="@color/white"
                android:padding="16dp" />

            <TextView
                android:id="@+id/link_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Create Account" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>