<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <!--Main Content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="69dp"
                android:layout_height="176dp"
                android:background="@color/primaryColor"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/menu_hambuger_buttom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="menuHamburguer"
                    android:src="@drawable/menu_hamburger"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/primaryColor"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/home_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/buttom_circular"
                        android:contentDescription="Home"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/iconhome" />

                    <ImageButton
                        android:id="@+id/profile_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/buttom_circular"
                        android:contentDescription="Profile"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/iconprofile" />

                    <ImageButton
                        android:id="@+id/photo_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/buttom_circular"
                        android:contentDescription="Photos"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/iconphoto" />

                    <ImageButton
                        android:id="@+id/video_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/buttom_circular"
                        android:contentDescription="Video"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/iconplay" />

                    <ImageButton
                        android:id="@+id/web_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/buttom_circular"
                        android:contentDescription="Web"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/iconweb" />

                </LinearLayout>

            </com.google.android.material.navigation.NavigationView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp">


            <!--Header-->
                <!--Profile Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:background="@color/primaryColor"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERFIL"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:translationY="110dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/image_circular"
                        android:contentDescription="Profile Picture"
                        android:elevation="8dp"
                        android:src="@drawable/profileimg" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="8dp"
                        android:src="@drawable/editphoto" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:translationY="110dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:text="User name"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="Ocupación"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:background="@color/primaryColor"
                        android:padding="8dp"
                        android:text="Datos"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Edad: "
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Ocupacion: "
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Experiencia: "
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:background="@color/primaryColor"
                        android:padding="8dp"
                        android:text="Temáticas"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Deportes"
                            tools:ignore="TouchTargetSizeCheck" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Entretenimiento"
                            tools:ignore="TouchTargetSizeCheck" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Tecnología"
                            tools:ignore="TouchTargetSizeCheck" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Política"
                            tools:ignore="TouchTargetSizeCheck" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Economía"
                            tools:ignore="TouchTargetSizeCheck" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:text="Salud"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                    <!-- Fuentes Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/primaryColor"
                        android:padding="8dp"
                        android:text="Fuentes"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El Espectador https://www.elespectador.com/" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El Tiempo https://www.eltiempo.com/" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNN https://www.cnn.com/" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CARACOL https://www.noticiascaracol.com/" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RCN https://www.canalrcn.com/" />
                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Drawer -->


</androidx.drawerlayout.widget.DrawerLayout>